<%= form_for(@user) do |f| %>
     <table>
      <tr>
        <td>
            <%= f.label :name %>
            <%= f.text_field :name %>
          </td>
      </tr>
      <tr>
        <td>
            <%= f.label :email %>
            <%= f.email_field :email %>
          </td>
        </tr>
      <tr>
        <td>
            <%= f.label :password %>
            <%= f.password_field :password %>
        </td>
      </tr>
      <tr>
        <td>
            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation %>
        </td>
      </tr>
      <tr>
        <td>
            <%= f.submit "Create my account", class: "btn btn-primary" %>
    </td>
  </tr>
    </table>
<% end %>
