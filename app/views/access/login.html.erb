<%= stylesheet_link_tag "access" %> 

  <div class="login-card">
   <h1>Login</h1><br>
   <%=form_tag(:action => 'attempt_login') do  %>
    
      <%= label_tag(:email) %> 
      <%= text_field_tag(:email) %> 
    
      <%= label_tag(:password)%>
     <%= password_field_tag(:password) %> 
      <span class="login">
      <%= submit_tag("Login")%>
      </span> 
      <div class="login-help">
      <%= link_to("Create a new User", {:controller => 'users', :action => 'new'})%>
      </div>
    
    <% end %>
  </div>

